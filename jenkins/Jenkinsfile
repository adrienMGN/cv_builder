pipeline {
    agent {
        docker {
            image 'node:20-alpine'
            args '-u root:root'
        }
    }

    environment {
        CI = 'true'
    }

    stages {
        stage('Install Dependencies') {
            steps {
                echo 'Installing Frontend Dependencies...'
                sh 'npm install'
                
                echo 'Installing Backend Dependencies...'
                dir('backend') {
                    sh 'npm install'
                }
            }
        }

        stage('Lint') {
            steps {
                echo 'Linting Frontend...'
                sh 'npm run lint'
                
                echo 'Linting Backend...'
                dir('backend') {
                    sh 'npm run lint'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Testing Frontend...'
                sh 'npm test'
                
                echo 'Testing Backend...'
                dir('backend') {
                    sh 'npm test'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                echo 'Building Frontend...'
                sh 'npm run build'
            }
        }
        stage('Deploy App') {
            steps {
                echo "Lancement de la pipeline de d√©ploiement..."
                build job: 'deploy_pod', wait: false
            }
        }
    }
}
